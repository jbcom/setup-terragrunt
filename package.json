{
  "name": "setup-terragrunt",
  "version": "1.1.0",
  "description": "Setup Terragrunt CLI for GitHub Actions",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "prepare": "ncc build index.js -o dist --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run lint && npm run prepare && npm run test",
    "cm": "git cz"
  },
  "keywords": [],
  "homepage": "https://github.com/jbcom/setup-terragrunt",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jbcom/setup-terragrunt.git"
  },
  "dependencies": {
    "@actions/core": "latest",
    "@actions/exec": "latest",
    "@actions/tool-cache": "latest",
    "@octokit/rest": "latest"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@semantic-release/changelog": "latest",
    "@semantic-release/git": "latest",
    "@semantic-release/github": "latest",
    "@semantic-release/npm": "latest",
    "@semantic-release/release-notes-generator": "latest",
    "@vercel/ncc": "latest",
    "commitizen": "latest",
    "cz-conventional-changelog": "latest",
    "eslint": "latest",
    "jest": "latest",
    "semantic-release": "latest"
  }
}
